                    <h6>Mobile</h6>
                    <p class="text-muted"><%= @user.mobile%></p>
                  </div>
                   <div class="col-6 mb-3">
                    <h6>City</h6>
                    <p class="text-muted"><%= @user.city%></p>
                  </div>
                 <div class="col-6 mb-3">
                    <h6>Password</h6>
                    <p class="text-muted"><%= @user.password%></p>
                  </div>
                
               <div class="col-6 mb-3">
